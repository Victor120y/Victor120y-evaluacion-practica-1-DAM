<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tema3_5" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textViewStyle">@style/textviewPersonalizado</item>
        <item name="editTextStyle">@style/edittextPersonalizado</item>
        <item name="materialButtonStyle">@style/buttonPersonalizado</item>
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorOnSurface">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="textviewPersonalizado" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:fontStyle">italic</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Solo una definiciÃ³n y con padre correcto -->
    <style name="edittextPersonalizado" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="buttonPersonalizado" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/grey</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="shapeAppearance">@style/ShapeAppearance.buttonPersonalizado</item>
    </style>

    <style name="ShapeAppearance.buttonPersonalizado" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Tema3_5" parent="Base.Theme.Tema3_5" />

    <style name="Theme.Tema3_5.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tema3_5.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tema3_5.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>